<section class="pickUsernameSection">
	<form action="/pick-username" method="POST" class="pickUsernameForm">
		<h1>Pick a username</h1>
		<p>Your username is how people can discover you</p>
		<div class="inputField">
			<label for="username">Username</label>
			<input placeholder="Username" name="username" id="username" value="<%= formFieldData?.username?.value %>" required />
			<% if (formFieldData?.username?.error) {%>
			<p class="errorMessage"><%= formFieldData?.username?.error %></p>
			<% } %>
		</div>
		<button type="submit">Save Username</button>
	</form>

	<script src="/removeInputErrorMessages.js" defer></script>
	<script src="/togglePasswordVisibility.js" defer></script>
</section>